@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<div id="dashboardStats" class="row g-4 mb-5">
    <!-- Cards injected by JS -->
</div>

<h3>Recent Tasks</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Priority</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody id="recentTasksBody">
        <!-- Populated by JS -->
    </tbody>
</table>

@section Scripts {
    <script src="~/js/dashboard.js" defer></script>
}
